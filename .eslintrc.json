{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "@wemake-services/typescript/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "semi": "off",
        "@typescript-eslint/semi": ["off"]
    },
    "settings": {
        "import/resolver": {
            "node": {
              "extensions": [".js", ".jsx", ".ts", ".tsx"]
            }
          },
        "react": {
          "version": "detect"
        }
    }
}
